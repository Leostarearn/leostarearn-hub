<div id="thanks" style="display: none; margin-top: 30px; color: green; font-weight: 600; font-size: 1rem;">
  <span class="checkmark-container">
    <svg class="checkmark" viewBox="0 0 52 52">
      <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
      <path class="checkmark-check" fill="none" d="M14 27l7 7 16-16"/>
    </svg>
  </span>
  <span id="thanks-text"></span>
</div>

<script>
  function selectEbook(title) {
    document.getElementById('selected-ebook').value = title;
    window.scrollTo({
      top: document.getElementById('ebook-form').offsetTop - 100,
      behavior: 'smooth'
    });
  }

  function submitForm(e) {
    e.preventDefault();

    const form = e.target;
    const selectedEbook = document.getElementById('selected-ebook').value.trim();
    const submitBtn = form.querySelector('button');
    const thanksMsg = document.getElementById('thanks');
    const thanksText = document.getElementById('thanks-text');

    // ✅ Prevent empty submission
    if (!selectedEbook) {
      alert("❗ Please select an eBook before submitting.");
      return;
    }

    // Disable the button while sending
    submitBtn.disabled = true;
    submitBtn.innerText = "Sending...";

    const formData = new FormData(form);

    fetch("https://hook.eu2.make.com/q6b0z3ilkez8kx51c9il4nnt4sxgh349", {
      method: "POST",
      body: formData
    })
    .then(() => {
      form.reset();
      form.style.display = "none";

      let countdown = 30;
      thanksText.innerHTML = `
        ✅ <strong>You're awesome!</strong> Your eBook is on the way — please check your inbox, spam, or promotions tab. <br><br>
        <span id="countdown-text">⏳ You can request another eBook in <strong>${countdown}</strong> seconds.</span>
      `;
      thanksMsg.style.display = 'block';
      thanksMsg.scrollIntoView({ behavior: 'smooth' });

      // Countdown timer
      const interval = setInterval(() => {
        countdown--;
        document.getElementById('countdown-text').innerHTML =
          `⏳ You can request another eBook in <strong>${countdown}</strong> seconds.`;

        if (countdown <= 0) {
          clearInterval(interval);
          thanksMsg.style.display = 'none';
          form.style.display = "flex";
          submitBtn.disabled = false;
          submitBtn.innerText = "Send eBook";
        }
      }, 1000);
    })
    .catch(() => {
      alert("Something went wrong. Please try again later.");
      submitBtn.disabled = false;
      submitBtn.innerText = "Send eBook";
    });
  }
</script>

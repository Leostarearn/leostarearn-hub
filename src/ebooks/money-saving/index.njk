<script>
  function selectEbook(title) {
    document.getElementById('selected-ebook').value = title;
    window.scrollTo({
      top: document.getElementById('ebook-form').offsetTop - 100,
      behavior: 'smooth'
    });
  }

  function submitForm(e) {
    e.preventDefault();

    const form = e.target;
    const submitBtn = form.querySelector('button');
    const thanksMsg = document.getElementById('thanks');
    const thanksText = document.getElementById('thanks-text');

    // Disable the button while sending
    submitBtn.disabled = true;
    submitBtn.innerText = "Sending...";

    const formData = new FormData(form);

    fetch("https://hook.eu2.make.com/q6b0z3ilkez8kx51c9il4nnt4sxgh349", {
      method: "POST",
      body: formData
    })
    .then(() => {
      form.reset();
      form.style.display = "none";

      let countdown = 30;
      thanksText.innerHTML = `
        ‚úÖ <strong>You're awesome!</strong> Your eBook is on the way ‚Äî please check your inbox, spam, or promotions tab. <br><br>
        <span id="countdown-text">‚è≥ You can request another eBook in <strong>${countdown}</strong> seconds.</span>
      `;
      thanksMsg.style.display = 'block';
      thanksMsg.scrollIntoView({ behavior: 'smooth' });

      // Countdown timer
      const interval = setInterval(() => {
        countdown--;
        document.getElementById('countdown-text').innerHTML =
          `‚è≥ You can request another eBook in <strong>${countdown}</strong> seconds.`;

        if (countdown <= 0) {
          clearInterval(interval);
          thanksMsg.style.display = 'none';
          form.style.display = "flex";
          submitBtn.disabled = false;
          submitBtn.innerText = "Send eBook";
        }
      }, 1000);
    })
    .catch(() => {
      alert("Something went wrong. Please try again later.");
      submitBtn.disabled = false;
      submitBtn.innerText = "Send eBook";
    });
  }
</script>
